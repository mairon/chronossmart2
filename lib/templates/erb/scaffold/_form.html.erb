<%%= form_for(@<%= singular_table_name %>) do |f| %>
  <%% if @<%= singular_table_name %>.errors.any? %>
    <div id="error_explanation">
      <h2><%%= pluralize(@<%= singular_table_name %>.errors.count, "error") %> prohibited this <%= singular_table_name %> from being saved:</h2>

      <ul>
      <%% @<%= singular_table_name %>.errors.full_messages.each do |msg| %>
        <li><%%= msg %></li>
      <%% end %>
      </ul>
    </div>
  <%% end %>

<ul class="tabs">
      <li><a href="#tab1"> <%= plural_table_name %> - [Edicion]</a></li>
</ul>

<div class="tab_container">
      <div id="tab1" class="tab_content">
        <table>
          <tr>
            <td width="1000">
              <fieldset>

                <table>
                  <tr>
                    <% attributes.each do |attribute| -%>                  
                      <td align="right"><%= attribute.name %> :</td>                    
                      <td><%%= f.<%= attribute.field_type %> :<%= attribute.name %> %></td>
                    <% end -%>
                  </tr>                 
                </table>
              </fieldset>
            </td>
          </tr>
        </table>
      </div>
      
      <div class="buttons">
        <%%= f.submit :value => " Grabar ", :class => "button" %>
        <%%= link_to 'Volver', <%= index_helper %>_path, :class => "button back" %>        
      </div>

    </div>
<%% end %>