<h1 id="header">
Custom Fields
  <div class="pull-right">
    <%= link_to 'Nuevo', new_custom_field_path, :class => "button add" %>
  </div>
</h1>
<div class="acessos">
  
</div>

<table class="head_grid">
  <tr>
    <td width="150">Tabela</td>
    <td width="150">Label</td>
    <td width="150">Internal name</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @custom_fields.each do |custom_field| %>
      <tr class = "<%= cycle("cor1", "cor2") %>">
        <td width="150"><%= custom_field.tabela %></td>
        <td width="150"><%= custom_field.label %></td>
        <td width="150"><%= custom_field.internal_name %></td>
        <td><%= link_to '', edit_custom_field_path(custom_field), class: 'icon-pencil' %></td>
        <td><%= link_to '', custom_field, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
      </tr>
    <% end %>
  </table>
</div>

