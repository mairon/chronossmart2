<h1 id="header">turma_personas</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_turma_persona_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Persona</t>
            <td>Status</t>
            <td>Turma</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @turma_personas.each do |turma_persona| %>
      <tr>
                  <td><%= turma_persona.persona_id %></td>
                  <td><%= turma_persona.status %></td>
                  <td><%= turma_persona.turma_id %></td>
                <td><%= link_to 'Editar', edit_turma_persona_path(turma_persona) %></td>
        <td><%= link_to 'Borrar', turma_persona, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

