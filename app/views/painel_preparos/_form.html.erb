<h1 id="header">Pantalla de Preparo</h1>
<div class="group">
<%= form_for(@painel_preparo) do |f| %>

  <table>
    <tr>                                     
      <td>
        <label>Descripci√≥n</label>
        <%= f.text_field :nome, class: 'panel-field' %>
      </td>
    </tr>
    <tr>
      <td>
        <label>grupo_ids</label>
        <%= f.text_area :grupo_ids, rows: 3 %>
      </td>
    </tr>                 

    <tr>
      <td>
        <label>Print</label>
        <%= f.text_area :set_print, rows: 1 %>
      </td>
