<div class="panel">
	<h1 id="header">
		Aplicações
	</h1>

  <% if @viatico.moeda == 0 %>
    <span class="us"><% saldo_us = @viatico.valor_us %></span>
  <% elsif @viatico.moeda == 1 %>
    <span class="gs"><% saldo_gs = @viatico.valor_gs %></span>
  <% else %>
    <span class="rs"><% saldo_rs = @viatico.valor_rs %></span>
  <% end %>

	<div class="panel-content">
		<table class="list">
			<tr class="head_grid">
				<td align="center"><%= t('DATE')%></td>
				<td>Doc.</td>
				<td>Proveedor</td>
				<td>Clasificação</td>
				<td align="right">Valor</td>
				<td align="right">Saldo</td>
			</tr>			
			
			<% @aplicacao_viatico.each do |a| %>
				<tr class="<%= cycle("cor1", "cor2")%>">
					<td width="60" align="center"><%= a.data.strftime("%d/%m/%y") %></td>
					<td width="60"><%= a.documento_numero %></td>
					<td width="200"><%= a.persona_nome %></td>
					<td width="200"><%= a.plano_de_conta_nome %></td>
					<% if @viatico.moeda == 0 %>
						<td width="80" align="right"><%= format_decimal(a.valor_us) %></td>
					<% elsif @viatico.moeda == 1 %>
						<td width="80" align="right"><%= format_int(a.valor_gs) %></td>
					<% else %>
						<td width="80" align="right"><%= format_decimal(a.valor_rs) %></td>
					<% end %>
				</tr>
			<% end %>
		</table>
	</div>
</div>