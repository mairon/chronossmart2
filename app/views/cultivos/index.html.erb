<h1 id="header">cultivos</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_cultivo_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Nome</t>
            <td>Status</t>
            <td>Obs</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @cultivos.each do |cultivo| %>
      <tr>
                  <td><%= cultivo.nome %></td>
                  <td><%= cultivo.status %></td>
                  <td><%= cultivo.obs %></td>
                <td><%= link_to 'Editar', edit_cultivo_path(cultivo) %></td>
        <td><%= link_to 'Borrar', cultivo, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

