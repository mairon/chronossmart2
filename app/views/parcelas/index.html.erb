<h1 id="header">parcelas</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_parcela_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Nome</t>
            <td>Status</t>
            <td>Obs</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @parcelas.each do |parcela| %>
      <tr>
                  <td><%= parcela.nome %></td>
                  <td><%= parcela.status %></td>
                  <td><%= parcela.obs %></td>
                <td><%= link_to 'Editar', edit_parcela_path(parcela) %></td>
        <td><%= link_to 'Borrar', parcela, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

