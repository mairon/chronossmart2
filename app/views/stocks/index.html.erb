  <h1 id="header">Ficha de Stock</h1>
  <style type="text/css">
    select {
      width: 600px;
    }
  </style>
  <div class="group">
    <h2>
      <%= form_tag relatorio_stock_stocks_path, :method => "get" do %>
        <table>
          <tr>
            <td align="right"> Fecha:</td>
            <td>
              <input name="inicio" id="inicio" size="10" type="text" onkeyup="Formatadata(this,event)" autofocus/>
              Hasta
              <input name="final" id="final" size="10" type="text" onkeyup="Formatadata(this,event)" />
            </td>
          </tr>

          <tr>
            <td align="right">Clase:</td>
            <td>
              <%= select("busca", "clase", Clase.all(select: 'id,descricao').collect {|p| [ p.descricao, p.id ] }, { prompt: 'Todos' }) %>
            </td>
          </tr>

          <tr>
            <td align="right">Grupo:</td>
            <td>
              <%= select("busca", "grupo", Grupo.all(select: 'id,descricao').collect {|p| [ p.descricao, p.id ] }, { prompt: 'Todos' }) %>
            </td>
          </tr>

          <tr>
            <td align="right">Sub-Grupo:</td>
            <td>
              <%= select("busca", "sub_grupo", SubGrupo.all(select: 'id,descricao').collect {|p| [ p.descricao, p.id ] }, { prompt: 'Todos' }) %>
            </td>
          </tr>
          <tr>
            <td align="right">Producto:</td>
            <td>
              <%= select("busca", "produto", Produto.all(select: 'id,nome',order: 'nome').collect {|p| [ p.nome, p.id ] }, { prompt: 'Todos' })%>
            </td>
          </tr>
          <tr>
            <td align="right">Persona:</td>
            <td>
              <%= select("busca", "persona", Persona.all(select: 'id,nome', order: 'nome').collect {|p| [ p.nome, p.id ] }, { prompt: 'Todos' }) %>
            </td>
          </tr>
          <tr>
            <td align="right">Deposito:</td>
            <td>
              <%= select("busca", "deposito", Deposito.all(select: 'id,nome', order: 'nome', :conditions => ["unidade_id = #{current_unidade.id}"]).collect {|p| [ p.nome, p.id ] }) %>
            </td>
          </tr>


          <tr>
            <td></td>
            <td>
              <fieldset>
                <legend>Tipo</legend>
                <input id         = "status"
                       name       = "status"
                       type       = "radio"
                       value      = "0"
                       checked
                       onkeyup    = "Formatadata(this,event)" />Fisico

                <input id    ="status"
                       name  ="status"
                       type  ="radio"
                       value ="1"
                       onkeyup    = "Formatadata(this,event)" />Financiero
                <input id    ="status"
                       name  ="status"
                       type  ="radio"
                       value ="2"
                       onkeyup    = "Formatadata(this,event)" />Sint√©tico

              </fieldset>
            </td>
          </tr>

          <tr>
            <td></td>
            <td>
              <fieldset>
                <legend>Moneda</legend>
                <input id         = "moeda"
                       name       = "moeda"
                       type       = "radio"
                       value      = "0"                       
                       onkeypress = "return bloqEnter(event)"
                       onkeyup    = "Formatadata(this,event),EnterTab(event,'button')" />Dolar

                <input id    ="moeda"
                       name  ="moeda"
                       type  ="radio"
                       value ="1"
                       checked
                       onkeypress = "return bloqEnter(event)"
                       onkeyup    = "Formatadata(this,event),EnterTab(event,'button')" />Guaranies

              </fieldset>
            </td>
          </tr>


          <tr>
            <td></td>
            <td>
              <fieldset>
                <legend>Filtros</legend>
                <input id         = "filtro"
                       name       = "filtro"
                       type       = "radio"
                       value      = ""
                       checked
                       onkeypress = "return bloqEnter(event)"
                       onkeyup    = "Formatadata(this,event),EnterTab(event,'button')" />Todos

                <input id    ="filtro"
                       name  ="filtro"
                       type  ="radio"
                       value ="0"
                       onkeypress = "return bloqEnter(event)"
                       onkeyup    = "Formatadata(this,event),EnterTab(event,'button')" />Entrada

                <input id         = "filtro"
                       name       = "filtro"
                       type       = "radio"
                       value      = "1"
                       onkeypress = "return bloqEnter(event)"
                       onkeyup    = "Formatadata(this,event),EnterTab(event,'button')" />Salida
              </fieldset>
            </td>
          </tr>

          <tr>
            <td></td>
            <td>
              <fieldset>
                <legend>Orden</legend>
                <input id         = "orden"
                       name       = "orden"
                       type       = "radio"
                       value      = "0"
                       checked
                       onkeypress = "return bloqEnter(event)"
                       onkeyup    = "Formatadata(this,event),EnterTab(event,'button')" />Fecha 

                <input id         = "orden"
                       name       = "orden"
                       type       = "radio"
                       value      = "1"                       
                       onkeypress = "return bloqEnter(event)"
                       onkeyup    = "Formatadata(this,event),EnterTab(event,'button')" />Producto 

                <input id         = "orden"
                       name       = "orden"
                       type       = "radio"
                       value      = "2"
                       onkeypress = "return bloqEnter(event)"
                       onkeyup    = "Formatadata(this,event),EnterTab(event,'button')" />Persona

              </fieldset>
            </td>
          </tr>


          <tr>
            <td></td>
            <td>
              <input id="button" type="submit" class="btn btn-default" value="Informe" class="button" onclick="Tipo('0')"/>
              <input type="submit" class="btn btn-default" value="Excel" class="button" onclick="Tipo('1')"/>
            </td>
          </tr>
          <input type="hidden" name="tipo" id="tipo" size="5" value="0"/>
        </table>
      <% end %>
    </h2>
  </div>
