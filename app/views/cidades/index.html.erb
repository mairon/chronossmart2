<h1 id="header"><%= t('CITIES') %></h1>
<div class="acessos">
  <%= link_to t('NEW'), {:action => 'new'}, :class => 'button add' %>
</div>
<div class="group">

  <table class="head_grid">
    <tr>
      <td width="110" align="center"><%= t('CODE') %></td>
      <td width="100"><%= t('COUNTRIES') %></td>
      <td width="200"><%= t('STATE') %>s</td>
      <td width="300"><%= t('CITIES') %></td>
      <td width="55"></td>
    </tr>
  </table>
  <div class="rolagem" id="div">
    <table>
      <% @cidades.each do |c| %>
        <tr class = "<%= cycle("cor1", "cor2")%>" >
          <td width="110" align="center"><%= c.id.to_s.rjust(6,'0') %></td>
          <td width="100"><%= c.distrito.estado.paise.nome unless c.distrito.blank? %></td>
          <td width="200"><%= c.distrito.estado.nome unless c.distrito.blank? %></td>
          <td width="200"><%= c.distrito.nome unless c.distrito.blank? %></td>
          <td width="300"><%= c.nome %></td>
          <td><%= link_to '', edit_cidade_path(c), class: 'icon-pencil' %></td>
          <td><%= link_to '', c, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="head_grid">
  <%= will_paginate @cidades, "data-remote" => "true" %>
</div>


