<div class="group">
  <%= form_for(@controle_km) do |f| %>
    <div class="row">
      <div class="col-md-6">
        <label><%= t('DATE') %></label>
        <%= f.date_select :data %>    
      </div>      
    </div>
    <div class="row">
      <div class="col-md-12">
        <label>Chofer</label>
        <%= f.collection_select :persona_id, Persona.where(tipo_funcionario: 1).select('id,nome'), :id, :nome, { :prompt => 'Seleccione' }, {class: 'selectize'} %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <label><%= t('VEHICLES') %></label>
        <%= f.collection_select :rodado_id, Rodado.all( :select => 'id,placa', :order  => '2' ),:id,:placa, { :prompt => 'Seleccione' }, {class: 'selectize'} %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <label>KM</label>
        <%= f.text_field :km, class: 'panel-field' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <br>
        <%= f.text_area :obs, class: 'panel-field', placeholder: 'Concepto', rows: '3' %>
      </div>
    </div>
    <div class="footer-buttons">
      <%= f.submit t('SAVE'), class: "btn btn-green", disable_with: "Aguarde...", "data-plus-as-tab" => "false"%>
    </div>
  <% end %>
</div>