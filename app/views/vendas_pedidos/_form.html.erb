<%= form_for(vendas_pedido) do |f| %>
<div class="panel">
  <div class="panel-content">
    <div class="group">
      <div class="row">
        <div class="col-md-10" >
          <label>NÂº Pedido</label>
          <%= f.hidden_field :venda_id %>
          <%= f.collection_select :presupuesto_id, Presupuesto.where(status: 'PENDENTE', persona_id: @venda.persona_id).select('id'), :id, :id, { prompt: 'Selecione o Pedido' }, {required: true} %>
        </div>
        <div class="col-md-2" style="margin-top: 27px">

