<h1 id="header"><%= t('CLASSIFICATION') %></h1>
<div class="acessos">
  <%= link_to t('NEW'), new_rubro_path, :class => "button add" %>
</div>

<div class="group">
   <table class="head_grid">
      <tr>
         <td width="100"align="center">Cod</td>
         <td width="550"><%= t('CLASSIFICATION') %></td>
      </tr>
   </table>
   <div class="rolagem" id="div">
      <table>

         <% for rubro in @rubros %>
            <tr class = "<%= cycle("cor1", "cor2") %>">
              <td width="100" align="center"><%= rubro.id %></td>
               <td width="550" ><%= rubro.descricao %></td>
               <td><%= link_to '', edit_rubro_path(rubro), class: 'icon-pencil' %></td>
               <td><%= link_to '', rubro, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
            </tr>
         <% end %>
      </table>
   </div>
</div>


