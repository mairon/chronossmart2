<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <h1 id="header">
        Evento <%= @evento.nome %>
        <small><%= @evento.obs %></small>
        <div class="pull-right">
          <%= @evento.id.to_s.rjust(6,'0') %>
        </div>
      </h1>
      <div class="panel-content">
        <div class="row">
          <div class="col-md-12">
            <label>Nombre</label>
            <b><%= @evento_convidado.nome %></b>            
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label>Doc.</label>
            <b><%= @evento_convidado.doc %></b>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label>Telefone</label>
            <b><%= @evento_convidado.telefone %></b>
          </div>
        </div>
        
        <br>
        <div class="row">
          <div class="col-md-12" align="center">
            <% if @evento_convidado.confirmado == false %>
              <%= form_for(@evento_convidado) do |f| %>
                <%= f.hidden_field :confirmado, value: true %>
                <%= f.hidden_field :confirmado_data, value: Time.now.strftime("%Y-%m-%d") %>
                <p align="center">
                  <%= f.submit :value => "CONFIRMAR PRESENCIA", :class => "btn btn-green panel-field" %>
                </p>
              <% end %>
            <% else %>
            <br>
              <span style="border-radius: 3px ;padding: 10px;color:#fff;background-color:#5cb85c;border-color:#4cae4c">Gracias por su Confirmaci√≥n!</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>   
  </div>

</div>

