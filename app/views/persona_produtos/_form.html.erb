<%= form_for(@persona_produto) do |f| %>
  <% if @persona_produto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@persona_produto.errors.count, "error") %> prohibited this persona_produto from being saved:</h2>

      <ul>
      <% @persona_produto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<ul class="tabs">
      <li><a href="#tab1"> persona_produtos - [<%= t('EDITION') %>]</a></li>
</ul>

<div class="tab_container">
      <div id="tab1" class="tab_content">
        <table>
          <tr>
            <td width="1000">
              <fieldset>

                <table>
                  <tr>
                    <td>
                      <fieldset>

                        <table>
                          <tr>
                            <%= f.hidden_field :persona_id %>
