<h1 id="header">marcas</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_marca_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td width="80" align="center"><%= t('NAME') %></td>
            <td width="55" align="center">Registro</td>
            <td width="65" align="center">Endereco</td>
            <td width="115" align="center">Telefone</td>
            <td width="55" align="center">Email</td>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @marcas.each do |marca| %>
      <tr>
                  <td width="80" align="center"><%= marca.nome %></td>
                  <td width="58" align="center"><%= marca.registro %></td>
                  <td><%= marca.endereco %></td>
                  <td><%= marca.telefone %></td>
                  <td><%= marca.email %></td>
                <td><%= link_to 'Editar', edit_marca_path(marca) %></td>
        <td><%= link_to t('DELETE'), marca, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

