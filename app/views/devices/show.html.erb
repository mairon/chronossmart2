<div class="group" align="center">
  <h1 id="header"><%= t('.device_name', name: @device.nome) %></h1>
  <br>
  <h2 align="center">
    <%= t('.status') %>
    <br>
    <br>
    <% if connected_whatsapp?(token: @device.token, instance: @device_instance_key) %>
      <span class="btn-success"><%= t('.connected') %></span>
    <% else %>
      <span class="btn-danger"><%= t('.disconnected') %></span>
    <% end %>
  </h2>

  <p>
  <a href="#" id="createQrcodeBtn" class="btn btn-green">
    <i class="icon-white icon-qrcode"></i>
    <%= t('.generate_qr_code_btn') %>
  </a>
  <% if connected_whatsapp?(token: @device.token, instance: @device_instance_key) %>
    <a href="#" id="whatsappLogoutBtn" class="btn btn-danger" style="display: none;">
      <%= t('.disconnect_btn') %>
    </a>
  <% end %>
  </p>
  <p><img id="qrCodeImg"></img></p>
  <p><%= link_to t('.exit_lnk'), devices_url %></p>
</div>

<div class="panel">
  <h1 id="header">Teste de Envio</h1>
  <div class="panel-content">
    <form action="#">
      <div class="row">
        <div class="col-md-12">
          <label for="">Nâ€¢ Whats</label>
          <%= text_field_tag :numero, nil, class: 'panel-field' %>
        </div>
        <div class="col-md-12">
          <label for="">Mensagem</label>
          <%= text_area_tag :obs, nil, class: 'panel-field' %>
        </div>
        <div class="col-md-12"><%= submit_tag 'Enviar teste', class: 'btn btn-green' %></div>
      </div>
    </form>
  </div>

<script>
  $('#createQrcodeBtn').click(function() {
    $.ajax({
      url: '/whatsapp/qrcode',
      type: 'GET',
      data: { token: "<%= @device.token %>", instance: "<%= @device.instance_key %>" },
      success: function(data) {
        $('#qrCodeImg').attr('src', data.qrcode);
      }
    });
  });

  $('#whatsappLogoutBtn').click(function() {
    $.ajax({
      url: '/whatsapp/logout',
      type: 'GET',
      data: { token: "<%= @device.token %>", instance: "<%= @device.instance_key %>" },
      success: function(data) {
        if(data.error == false) {
          location.reload();
        } else {
          console.log(data,message);
        }
      }
    });
  });
</script>
