<h1 id="header">turnos</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_turno_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="200">Nombre</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @turnos.each do |turno| %>
      <tr class = "<%= cycle("cor1", "cor2") %>">
        <td width="200"><%= turno.nome %></td>
        <td><%= link_to 'Editar', edit_turno_path(turno) %></td>
        <td><%= link_to t('DELETE'), turno, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

