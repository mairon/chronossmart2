<h1 id="header">tipo_atividades</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_tipo_atividade_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td><%= t('NAME') %></td>
            <td>Status</td>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @tipo_atividades.each do |tipo_atividade| %>
      <tr>
                  <td><%= tipo_atividade.nome %></td>
                  <td><%= tipo_atividade.status %></td>
                <td><%= link_to 'Editar', edit_tipo_atividade_path(tipo_atividade) %></td>
        <td><%= link_to t('DELETE'), tipo_atividade, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

