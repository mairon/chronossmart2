<h1 id="header">Brigadas</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_brigada_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="50" align="center">Código</td>
    <td width="200">Descriptión</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @brigadas.each do |brigada| %>
      <tr>
        <td width="50" align="center"><%= brigada.id.to_s.rjust(6,'0') %></td>
        <td width="200"><%= brigada.nome %></td>
        <td><%= link_to '', edit_brigada_path(brigada), class: 'icon-pencil' %></td>
        <td><%= link_to '', brigada, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
      </tr>
    <% end %>
  </table>
</div>

