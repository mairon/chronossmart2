<h1 id="header">operacao_fiscals</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_operacao_fiscal_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="100">CFOP</td>
    <td width="300"><%= t('NAME') %></td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @operacao_fiscals.each do |operacao_fiscal| %>
      <tr class = "<%= cycle("cor1", "cor2") %>">
        <td width="100"><%= operacao_fiscal.cfop %></td>
        <td width="300"><%= operacao_fiscal.nome %></td>
        <td><%= link_to 'Editar', edit_operacao_fiscal_path(operacao_fiscal) %></td>
        <td><%= link_to t('DELETE'), operacao_fiscal, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

