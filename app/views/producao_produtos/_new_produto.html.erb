<div class="group">
<%= form_for ProducaoProduto.new do |f| %>
  <%= f.hidden_field :producao_id, value: @producao.id %>
      <div class="row">
        <div class="col-md-12">
         <label><%= t('DATE') %></label>
         <%= f.date_select :data %>
        </div>
      </div>
      <div class="row">
       <div class="col-md-12">
        <label>.</label>
          <fieldset>
            <%= f.radio_button :status, 0,  :Checked => "True"%> Requisitado
            <%= f.radio_button :status, 1 %> Devoluci√≥n
          </fieldset>
       </div>
      </div>

      <div class="row">
        <div class="col-md-12">
         <label>Responsable</label>
         <%= f.collection_select :responsavel_id, Persona.all( :select => ' id,nome',:conditions => ['tipo_funcionario = 1'],:order => '2' ), :id, :nome %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <label>Producto</label>
          <%= f.collection_select :produto_id, Produto.all( :select => ' id,nome', :order  => '2' ), :id, :nome,{prompt: 'Selecione lo producto'}, {required: true, readonly: true} %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <label>Deposito</label>
          <%= f.collection_select :deposito_id, Deposito.all( :select => ' id,nome', :order  => '2' ), :id, :nome,{prompt: 'Selecione lo Deposito'}, {required: true, readonly: true} %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <label >Cantidad</label>
          <%= f.text_field  :quantidade, :size     => 10 , :dir      => "rtl"%>
        </div>

        <div class="col-md-6" style="padding-top: 30px">
          <%= f.submit "Add", class: "btn btn-green", disable_with: "Aguarde...", "data-plus-as-tab" => "false"%>
        </div>
      </div>
<% end %>
<script>
$('#producao_produto_responsavel_id, #producao_produto_produto_id, #producao_produto_deposito_id').selectize();
</script>
</div>
