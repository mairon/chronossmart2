<h1 id="header">comanda_produtos</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_comanda_produto_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Comanda</t>
            <td>Produto</t>
            <td>Produto nome</t>
            <td>Quantidade</t>
            <td>Obs</t>
            <td>Persona</t>
            <td>Unit gs</t>
            <td>Tot gs</t>
            <td>Unit us</t>
            <td>Tot us</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @comanda_produtos.each do |comanda_produto| %>
      <tr>
                  <td><%= comanda_produto.comanda_id %></td>
                  <td><%= comanda_produto.produto_id %></td>
                  <td><%= comanda_produto.produto_nome %></td>
                  <td><%= comanda_produto.quantidade %></td>
                  <td><%= comanda_produto.obs %></td>
                  <td><%= comanda_produto.persona_id %></td>
                  <td><%= comanda_produto.unit_gs %></td>
                  <td><%= comanda_produto.tot_gs %></td>
                  <td><%= comanda_produto.unit_us %></td>
                  <td><%= comanda_produto.tot_us %></td>
                <td><%= link_to 'Editar', edit_comanda_produto_path(comanda_produto) %></td>
        <td><%= link_to 'Borrar', comanda_produto, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

