<h1 id="header">Modelos Contratos</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_modelo_contrato_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td>Nome</td>
    <td>Processo</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @modelo_contratos.each do |modelo_contrato| %>
      <tr>
        <td><%= modelo_contrato.nome %></td>
        <td><%= modelo_contrato.processo %></td>
        <td><%= link_to 'Editar', edit_modelo_contrato_path(modelo_contrato) %></td>
        <td><%= link_to 'Borrar', modelo_contrato, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

