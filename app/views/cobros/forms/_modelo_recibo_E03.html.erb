<!-- MEDITER SRL -->
<body  onload="print()">
<% if @cobro.moeda == 0
	 	d = "DOLAR"
	 else
	 	d = "GUARANIES"
	 end
 %>

<style type="text/css">
	table {
		font-family:arial ;font-size:9px;

	}	

	.grid {
		border-collapse: collapse;
		
	}
	.header {
		border-collapse: collapse;
		border: 1px solid black;
	}

	#totales {
		border-collapse: collapse;
		border-left: 2px solid #fff;
		border-right: 2px solid #fff;
	}

	.cond {
		font-family:arial ;font-size:7px;
	}

	.grid tr td {
		border-collapse: collapse;
		border-bottom: 1px solid black;
	}


</style>
<!-- PRIMEIRA VIA -->

			<table align="left"  valign="top"  border="0" style="margin-left: 10px">
				<tr>
					<td height="115" align="right" valign="bottom"  colspan="4" width="478">
						<small><%= @cobro.documento_numero %>/<%= @cobro.id %></small></td>
				</tr>
				<tr>
					<td colspan="5">

					<table  border="1" style="border-collapse: collapse;">
						<tr>
							<td>

						<table>
							<tr>
								<td  width="65" align="right"><%= t('DATE') %> :</td>
								<td width="90"><%=l @cobro.data.to_date.to_date %></td>

								<td width="70" colspan="2"><%= t('COIN') %>:<%= d %> </td>
							</tr>

	
							<tr>
								<% per = Persona.find_by_id(@cobro.persona_id)%>
								<td align="right">Cliente :</td>
								<td width="478"><%= per.nome %></td>

								<td align="right">RUC/CI :</td>
								<td><%= per.ruc %></td>
							</tr>

							<tr>
								<td align="right">Dirección :</td>
								<td colspan="4"><%= per.direcao %></td>
							</tr>
						</table>
						</td>
        		</tr>
					</table>

					</td>
        	</tr>
        	<tr><td height="10"></td></tr>
        	<tr>
        		<td width="480" align="right">
							<div style="font-size:16px; border:1px solid; display:table;">
							<% if @cobro.moeda == 0 %>
								<b>Total: U$  <%= number_to_currency( @total_us.to_f,      :format =>' %n ', :separeitor => "," )%> </b> 
							<% else %>
								<b>Total: G$	<%= number_to_currency(  @tot_cobro_gs.to_f - @tot_des_gs.to_f, :format =>' %n ', :precision =>0 )%> </b> 
							<% end %>
							</div>
        		</td>
        	</tr>

					<tr>
						<td valign="bottom" colspan="4" width="478">
							En Letras
							<% if @cobro.moeda == 0 %>							
								<%= I18n.with_locale(:es) { @total_us.to_i.to_words.upcase } %> <%= 'CON ' + cents.to_s.rjust(2,'0') + '/100 DOLARES AMERICANOS' %> )
							<% else %>
								<%= I18n.with_locale(:es) { ( @tot_cobro_gs.to_f - @tot_des_gs.to_f ).to_i.to_words.upcase } %>
							<% end %>
						</td>
					</tr>

					<tr valign="top">
						<td width="480" height="100" style="border:1px solid">
							<%= @cf_last.descricao %>
							<br>
							<br>
							<br>
							Forma de Pago 
							<table>
							<% @cf.each do |cf| %>
								<tr>
									<td><%= cf.forma_pago.nome %></td>
									<td><%= ('cheque Nº: ' + cf.cheque) unless cf.cheque.blank? %></td>
									<td><%= ('Titular: ' + cf.titular)  unless cf.cheque.blank? %></td>
								</tr>
							<% end %>
							</table>
						</td>
					</tr>
					<tr>
						<td align="right">
							<br>
							<table>
								<tr>
									<td>____________________________</td>
								</tr>
								<tr>
									<td align="center">Firma</td>
								</tr>
							</table>
							<br>
						</td>
					</tr>
				</table>
