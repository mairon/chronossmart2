<h1 id="header">Liquidación de Empleado</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_recisao_func_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="50" align="center">Código</td>
    <td width="80" align="center">Fecha</td>
    <td width="250">Empleado</td>
    <td width="200">Motivo</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @recisao_funcs.each do |r| %>
      <tr>
        <td width="50" align="center"><%= link_to(r.id.to_s.rjust(6,'0'), recisao_func_path(r)) %></td>
        <td width="80" align="center"><%= r.data_calculo.strftime("%d/%m/%y")%></td>
        <td width="250"><%= r.persona.nome %></td>
        <td width="200">
          <% if r.motivo.to_i == 0 %>
            RENUNCIA
          <% elsif r.motivo.to_i == 1 %>
            RETIRO JUSTIFICADO
          <% elsif r.motivo.to_i == 2 %>
            DESPIDO JUSTIFICADO
          <% elsif r.motivo.to_i == 3 %>
            DESPIDO INJUSTIFICADO
          <% end %>
        </td>
        <td><%= link_to '', edit_recisao_func_path(r), class: 'icon-pencil' %></td>
        <td><%= link_to '', r, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
      </tr>
    <% end %>
  </table>
</div>

