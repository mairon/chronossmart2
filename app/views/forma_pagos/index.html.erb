<h1 id="header">Forma de Pago</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_forma_pago_path, :class => "button add" %>
</div>
<div class="group">
  <table class="head_grid">
    <tr>
      <td width="110" align="center"><%= t('CODE') %></td>
      <td width="200">Nombre</td>
      <td width="100">Tipo</td>
      <td width="100">Status</td>
      <td width="100"><%= t('CHARGE') %></td>
      <td width="100">Pago</td>
      <td width="100">Gasto</td>
    </tr>
  </table>

  <div class="rolagem" dir="div">
    <table>
      <% @forma_pagos.each do |forma_pago| %>
        <tr class="<%= cycle("cor1", "cor2")%>">
          <td width="110" align="center"><%= forma_pago.id.to_s.rjust(6,'0') %></td>
          <td width="200"><%= forma_pago.nome %></td>
          <td width="100"><%= forma_pago.tipo %></td>
          <td width="100"><%= forma_pago.status %></td>
          <td width="100"><%= forma_pago.cobro %></td>
          <td width="100"><%= forma_pago.pago %></td>
          <td width="100"><%= forma_pago.gasto %></td>
          <td><%= link_to '', edit_forma_pago_path(forma_pago), class: 'icon-pencil' %></td>
          <td><%= link_to '', forma_pago, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
