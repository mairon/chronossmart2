<h1 id="header">Prazos</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_prazo_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="50">Cod.</td>
    <td width="250">Descripci√≥n</td>
    <td width="50">Dias</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @prazos.each do |prazo| %>
      <tr class = "<%= cycle("cor1", "cor2") %>">
        <td width="50"><%= prazo.id.to_s.rjust(6,'0') %></td>
        <td width="250"><%= prazo.nome %></td>
        <td width="50"><%= prazo.dias %></td>
        <td><%= link_to 'Editar', edit_prazo_path(prazo) %></td>
        <td><%= link_to t('DELETE'), prazo, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

