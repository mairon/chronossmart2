<h1 id="header">Grupo de Personas</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_grupo_persona_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="80" align="center"><%= t('CODE') %></td>
    <td width="300">Grupo</td>
    <td width="100">Status</td>
    <td width="40" align="right">Activos</td>
    <td width="40" align="right">Inactivos</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @grupo_personas.each do |grupo_persona| %>
      <tr class = "<%= cycle( "cor1", "cor2" )%>">
        <td width="80" align="center"><%= grupo_persona.id.to_s.rjust(6,'0') %></td>
        <td width="300"><%= grupo_persona.nome %></td>
        <td width="100">
          <% if grupo_persona.status.to_i == 1 %>
            <font color="green">Activo</font>
          <% else %>
            <font color="red">Inactivo</font>
          <% end %>
        </td>
        <td width="40" align="right">
          <font color="green"><%= grupo_persona.grupo_personas_dts.count(:id, conditions: "status = 1") %></font>
        </td>
        <td width="40" align="right">
          <font color="red"><%= grupo_persona.grupo_personas_dts.count(:id, conditions: "status = 0") %></font>
        </td>
        <td><%= link_to 'Editar', edit_grupo_persona_path(grupo_persona) %></td>
        <td><%= link_to t('DELETE'), grupo_persona, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

