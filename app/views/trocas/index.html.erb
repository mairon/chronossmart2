    <% @trocas.each do |troca| %>
      <tr>
                  <td width="100"><%= troca.data.strftime("%d/%m/%Y") %></td>
                  <td width="200"><%= troca.persona.nome %></td>
                  <td width="200"><%= troca.observacao %></td>
                  <td><%= link_to 'Show', troca %></td>
