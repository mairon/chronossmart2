<h1 id="header">contrato_servicos</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_contrato_servico_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Contrato</td>
            <td>Produto</td>
            <td>Quantidade</td>
            <td>Unitario us</td>
            <td>Unitario gs</td>
            <td>Total us</td>
            <td>Total gs</td>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @contrato_servicos.each do |contrato_servico| %>
      <tr>
                  <td><%= contrato_servico.contrato %></td>
                  <td><%= contrato_servico.produto %></td>
                  <td><%= contrato_servico.quantidade %></td>
                  <td><%= contrato_servico.unitario_us %></td>
                  <td><%= contrato_servico.unitario_gs %></td>
                  <td><%= contrato_servico.total_us %></td>
                  <td><%= contrato_servico.total_gs %></td>
                <td><%= link_to 'Editar', edit_contrato_servico_path(contrato_servico) %></td>
        <td><%= link_to t('DELETE'), contrato_servico, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

