<h1 id="header">distritos</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_distrito_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Nome</t>
            <td>Departamento</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @distritos.each do |distrito| %>
      <tr>
                  <td><%= distrito.nome %></td>
                  <td><%= distrito.departamento_id %></td>
                <td><%= link_to 'Editar', edit_distrito_path(distrito) %></td>
        <td><%= link_to 'Borrar', distrito, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

