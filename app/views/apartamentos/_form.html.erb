      <div class="group" style="padding: 5px 15px 15px 15px">
        <h1 id="header">
          Editar Apartamento
        </h1>
        <%= form_for(@apartamento, class: 'form-default') do |f| %>
        <div class="row">
          <div class="col-md-12">
            <label>Nome</label>
            <%= f.text_field :nome, autofocus: true,required: true, class: 'panel-field' %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <label>Cliente</label>
            <%= f.collection_select :persona_id, Persona.where(tipo_cliente: 1).select('id,nome').order('nome'), :id, :nome, {include_blank: 'Liberado'} %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <label></label>
            <%= f.text_area :obs, placeholder: 'Complemento', rows: 3, class: 'panel-field' %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <%= f.check_box :status %> Status
          </div>
        </div>


          <div class="row">
            <div class="col-md-12 footer-buttons" >
              <%= submit_tag "Grabar", class: 'btn btn-green', disable_with: "Aguarde...", "data-plus-as-tab" => "false" %>
                <%= link_to 'Volver', predio_path(@apartamento.predio_id), class: 'btn btn-default' %>

            </div>
          </div>
        <% end %>
      </div>
