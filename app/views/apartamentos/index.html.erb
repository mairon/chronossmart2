<h1 id="header">apartamentos</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_apartamento_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Nome</t>
            <td>Status</t>
            <td>Persona</t>
            <td>Obs</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @apartamentos.each do |apartamento| %>
      <tr>
                  <td><%= apartamento.nome %></td>
                  <td><%= apartamento.status %></td>
                  <td><%= apartamento.persona_id %></td>
                  <td><%= apartamento.obs %></td>
                <td><%= link_to 'Editar', edit_apartamento_path(apartamento) %></td>
        <td><%= link_to 'Borrar', apartamento, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

