<h1 id="header">turma_responsavels</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_turma_responsavel_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Persona</t>
            <td>Comissao</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @turma_responsavels.each do |turma_responsavel| %>
      <tr>
                  <td><%= turma_responsavel.persona_id %></td>
                  <td><%= turma_responsavel.comissao %></td>
                <td><%= link_to 'Editar', edit_turma_responsavel_path(turma_responsavel) %></td>
        <td><%= link_to 'Borrar', turma_responsavel, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

