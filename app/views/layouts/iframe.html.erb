<!DOCTYPE html>
<html lang="es">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>Chronos Smart</title>
    <%= stylesheet_link_tag 'application', 'themes/base/jquery.ui.all', :media => 'all' %>
    <%= javascript_include_tag 'application','vendas' %>
    <%= csrf_meta_tag %>    
 

  </head>
  <body data-plus-as-tab="true">

    <div class="header-top">
      <a href="/menus" class="brand">CHRONOS SMART</a>
      <div class="info-right">
        <ul>
          <li class="divider-vertical"></li>
          <li>
            Unidade: <%= current_unidade.unidade_nome %>
          </li>
          <li class="divider-vertical"></li>
          <li>
            <ul id="bar2" class="menubar">
              <li>
                <a href="#" title="<%= current_user.usuario_nome %>"><%= current_user.usuario_nome %><b class="caret"></b></a>
                <ul class="sub_menu">
                  <li>
                    <% if session[:logged] %>
                      <%= link_to "logout", new_login_path, :action => :delete %>
                    <% end %>               
                  </li>
                </ul>
              </li>           
            </ul>
          </li>
        </ul>
      </div>
    </div>

    <% if flash[:notice] or flash[:observacao] %>
      <div class="Mensagem" id="observacao">
        <%= flash[:observacao] %>
        <%= flash[:notice] %>
      </div>
    <% end %>
      <div id="back">
      <div id="contents">
        <%= yield :layout %>
      </div>
    </div>

      <script>
        document.onkeydown=function(e)
        {
          if(e.which == 27)
            self.close();
        }
      </script>

<script>
    document.onkeydown=function(e)
    {
      if(e.which == 27)
        self.close();

      if(e.keyCode == 40){
            valor = parseInt($("#foco").val()) + 1;
            $("#foco").val(valor)
             campo     = '#'+ valor
             c_campo   = '.'+ valor
             ant_campo = '.'+ (valor - 1)
            $(campo).focus()

            if ((valor - 1)%2 == 0){
              $(ant_campo).css('backgroundColor','#fff');
            }else{
              $(ant_campo).css('backgroundColor','#f9f9f9');
            };

            $(c_campo).css('backgroundColor','#949494');
           return false;
         }

         if(e.keyCode == 38){
            valor = parseInt($("#foco").val()) - 1;
            $("#foco").val(valor)
             campo     = '#'+ valor
             c_campo   = '.'+ valor
             ant_campo = '.'+ (valor + 1)
            $(campo).focus()
            if ((valor + 1)%2 == 0){
              $(ant_campo).css('backgroundColor','#fff');
            }else{
              $(ant_campo).css('backgroundColor','#f9f9f9');
            };

            $(c_campo).css('backgroundColor','#949494');
           return false;
        }
      }
  </script>

  <div class="footer">
    Copyright Â© 2011-2017 - Chronos Software - Powered by <a href="http://chronos.com.py">Chronos</a>
  </div>

  </body>
</html>

