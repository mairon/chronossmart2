  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Chronos FaceAuth</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="assets/icon.png" />
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <%= stylesheet_link_tag 'application', 'themes/base/jquery.ui.all', :media => 'all'%>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tag %>
  </head>

  <body data-plus-as-tab="true">
    <% if flash[:notice] or flash[:observacao] %>
      <div class="Mensagem" id="observacao">
        <%= flash[:observacao] %>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class="Mensagem_error" id="observacao">
      <%= flash[:error] %>
    </div>

    <div id="back">
      <div id="contents" align="center" style="padding: 0px 80px">
      <% if Unidade.last.unidade_nome == 'CRECER' %>
        <%= image_tag("logoc.png", height: 200) %>  
      <% end %>    
        <%= yield :layout %>
        <%= image_tag "chronosid2.png", height: '220' %>
      </div>
    </div>

    <div class="footer">
      Copyright Â© 2011 - <%= Time.now.strftime("%Y") %> - Chronos - Powered by <a href="http://chronos.com.py">Chronos</a> - IP:  <%= request.remote_ip %>
    </div>

</html>
