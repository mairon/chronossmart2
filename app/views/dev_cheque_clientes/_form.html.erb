<%= form_for(@dev_cheque_cliente) do |f| %>
  <% if @dev_cheque_cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dev_cheque_cliente.errors.count, "error") %> prohibited this dev_cheque_cliente from being saved:</h2>

      <ul>
      <% @dev_cheque_cliente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<ul class="tabs">
      <li><a href="#tab1"> Devolución de Cheque Cliente - [<%= t('EDITION') %>]</a></li>
</ul>

<div class="tab_container">
      <div id="tab1" class="tab_content">
        <table>
          <tr>
            <td width="1000">
              <fieldset>

                <table>
                  <tr>
                    <td align="right"><%= t('DATE') %>:</td>
                    <td><%= f.date_select :data %></td>
                  </tr>

                  <tr>
                    <td align="right">Cotización :</td>
                      <td> <%= text_field  :dev_cheque_cliente, :cotacao,
                        :size     => 10,
                        :value    => @dev_cheque_cliente.cotacao.to_i,
                        :onfocus  => " $.ajax({url: '/buscas/cotz_us_compra',
                                          type: 'POST',
                                          data: 'data=' + $('#dev_cheque_cliente_data_3i').val()+'/'+
                                          $('#dev_cheque_cliente_data_2i').val()+'/'+
                                          $('#dev_cheque_cliente_data_1i').val(),
                                          success: function(data){
                                            $('#dev_cheque_cliente_cotacao').val(data);} })"%>
                    </td>

                    <td align="right">Cotización :</td>
                    <td> <%= text_field :dev_cheque_cliente,:cotacao_real ,
                                                  :size     => 10,
                                                  :value    => @dev_cheque_cliente.cotacao_real.to_i,
                                                  :onfocus  => " $.ajax({url: '/buscas/cotz_rs_compra',
                                                                 type: 'POST',
                                                                 data: 'data=' + $('#dev_cheque_cliente_data_3i').val()+'/'+
                                                                 $('#dev_cheque_cliente_data_2i').val()+'/'+
                                                                 $('#dev_cheque_cliente_data_1i').val(),
                                                                 success: function(data){
                                                                   $('#dev_cheque_cliente_cotacao_real').val(data);} })"%>


                    </td>
                  </tr>

                  <tr>
                    <td align="right">Motivo:</td>
                    <td colspan="4"><%= f.collection_select :motivos_dev_cheque_id, MotivosDevCheque.all( :select => ' id,nome', :order  => '2' ), :id, :nome,{:prompt => 'Seleccione el Motivo'},{onchange: "fp(this.options[this.selectedIndex].value)", :class => "selc_medium"} %></td>
                  </tr>

                  <tr>
                    <td align="right">Nombre :</td>
                    <td colspan="4"><%= f.collection_select :persona_id, Persona.all( :select => ' id,nome', :conditions => ["tipo_cliente = 1"], :order  => '2' ), :id, :nome,{:prompt => 'Seleccione el Cliente'},{:class => "selc_medium"} %></td>
                  </tr>

                  <tr>
                    <td align="right">Cuenta :</td>
                    <td><%= f.collection_select :conta_id, Conta.all( :select => ' id,nome', :conditions => ["unidade_id = #{current_unidade.id}"], :order  => '2' ), :id, :nome,{:prompt => 'Seleccione la Cuenta'} %></td>
                  </tr>

                  <tr>
                    <td align="right"> <span  class="title_vuelto" style="display:none">Cuenta Vuelto:</span></td>
                    <td><span   class="des_vuelto" style="display:none"><%= f.collection_select :vuelto_conta_id, Conta.all( :select => ' id,nome', :conditions => ["unidade_id = #{current_unidade.id} and tipo = 0 "], :order  => '2' ), :id, :nome,{:prompt => 'Seleccione la Cuenta'} %></span></td>
                  </tr>


                  <tr>
                    <td align="right" valign="top">Concepto :</td>
                    <td colspan="5"><%= f.text_area   :obs,:cols => 65, :rows => 5 %></td>
                  </tr>

                </table>
              </fieldset>
            </td>
          </tr>
        </table>
      </div>

      <div class="buttons">
        <%= f.submit :value => " Seguir ", :class => "button" %>
        <%= link_to t('BACK'), dev_cheque_clientes_path, :class => "button back" %>
      </div>
    </div>
    <script type="text/javascript">
    $("#dev_cheque_cliente_data_3i").focus();

    function fp(v){
      $.ajax({url: '/dev_cheque_clientes/dynamic_motivo_dev_cheque',
        type: 'POST',
        data: 'id=' + v,
        success: function(data){
          if(data == '1'){
          $(".des_vuelto").css('display','block');
          $(".title_vuelto").css('display','block');
        }else{
          $(".des_vuelto").css('display','none');
          $(".title_vuelto").css('display','none');

        };
        }
      });
    }
    </script>
<% end %>