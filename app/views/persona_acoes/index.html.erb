<h1 id="header">persona_acoes</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_persona_acao_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Acao</td>
            <td><%= t('DATE') %></td>
            <td>Persona</td>
            <td>Obs</td>
            <td>Responsavel</td>
            <td>Horas</td>
            <td>Retorno</td>
            <td>Status</td>
            <td>Retorno data</td>
            <td>Retorno horas</td>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @persona_acoes.each do |persona_acao| %>
      <tr>
                  <td><%= persona_acao.acao_id %></td>
                  <td><%= persona_acao.data %></td>
                  <td><%= persona_acao.persona_id %></td>
                  <td><%= persona_acao.obs %></td>
                  <td><%= persona_acao.responsavel_id %></td>
                  <td><%= persona_acao.horas %></td>
                  <td><%= persona_acao.retorno %></td>
                  <td><%= persona_acao.status %></td>
                  <td><%= persona_acao.retorno_data %></td>
                  <td><%= persona_acao.retorno_horas %></td>
                <td><%= link_to 'Editar', edit_persona_acao_path(persona_acao) %></td>
        <td><%= link_to t('DELETE'), persona_acao, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

