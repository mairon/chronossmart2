<%= form_for(@tamanho) do |f| %>
  <% if @tamanho.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tamanho.errors.count, "error") %> prohibited this tamanho from being saved:</h2>

      <ul>
      <% @tamanho.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<ul class="tabs">
      <li><a href="#tab1"> Tamanhos - [<%= t('EDITION') %>]</a></li>
</ul>

<div class="tab_container">
      <div id="tab1" class="tab_content">
        <table>
          <tr>
            <td width="1000">
              <fieldset>

                <table>
                  <tr>
                      <td align="right">Tamanho:</td>
                      <td><%= f.text_field :nome %></td>
                  </tr>
                  <tr>
                      <td align="right">Status:</td>
                      <td><%= f.check_box :status, :checked => true %></td>
                                      </tr>
                </table>
              </fieldset>
            </td>
          </tr>
        </table>
      </div>
      
      <div class="buttons">
        <%= f.submit :value => t('SAVE'), :class => "button" %>
        <%= link_to t('BACK'), tamanhos_path, :class => "button back" %>        
      </div>

    </div>
<% end %>