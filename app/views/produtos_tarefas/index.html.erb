<h1 id="header">produtos_tarefas</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_produtos_tarefa_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Produto</t>
            <td>Tarefa</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @produtos_tarefas.each do |produtos_tarefa| %>
      <tr>
                  <td><%= produtos_tarefa.produto_id %></td>
                  <td><%= produtos_tarefa.tarefa_id %></td>
                <td><%= link_to 'Editar', edit_produtos_tarefa_path(produtos_tarefa) %></td>
        <td><%= link_to 'Borrar', produtos_tarefa, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

