            <td width="20" align="center"><%= check_box_tag "pago[dividas_ids][]", c.id, false, { :class => 'm', onclick: "soma(this)"  } %></td>
            
            <td width="60"  align="center"><%= c.data.strftime("%d/%m/%y")%></td>
