<h1 id="header">Unidad - [<%= t('EDITION') %>]</h1>
 <div class="group">

<%= form_for(@unidade) do |f| %>

  <% if @unidade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@unidade.errors.count, "error") %> <%=  t('ERROR_ASSET_MESSAGE') %></h2>

      <ul>
        <% @unidade.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-8">
      <label><%= t('UNIT') %></label>
      <%= f.text_field :unidade_nome, class: 'panel-field' ,autofocus: true, required: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <label>Razao Social</label>
      <%= f.text_field :razao_social, class: 'panel-field' %>
    </div>

    <div class="col-md-4">
      <label>CI/RUC</label>
      <%= f.text_field :ruc, class: 'panel-field' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <label>Direción</label>
      <%= f.text_field :direcao, class: 'panel-field' %>
    </div>
    <div class="col-md-3">
      <label>Nº</label>
      <%= f.text_field :numero, class: 'panel-field' %>
    </div>
    <div class="col-md-3">
      <label>Barrio</label>
      <%= f.text_field :bairro, class: 'panel-field' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <label>Telefono</label>
      <%= f.text_field :telefone, class: 'panel-field' %>
    </div>
    <div class="col-md-6">
      <label>E-mail</label>
      <%= f.text_field :email, class: 'panel-field' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <label>Ciudad</label>
      <%= f.collection_select :cidade_id, Cidade.all( :select => ' id, nome', :order  => '2' ), :id,
                  :nome,{:prompt => 'Selecione la Ciudad'} %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
          <fieldset>
            <legend>Logo</legend>
            <%= image_tag @unidade.avatar.url, width: '50' %>
            <%= f.file_field :avatar, align: 'center' %>
          </fieldset>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <label>Titulo Sistema</label>
      <%= f.text_field :nome_sys, class: 'panel-field' %>
    </div>
    <div class="col-md-4">
      <label><%= t('COIN') %> Padrão</label>
      <%= f.radio_button  :moeda, 1 %> Guaranies
      <%= f.radio_button :moeda, 0 %> Dolares
      <%= f.radio_button :moeda, 2 %> Reales
      <br>
      <%= f.check_box :retencao %> Retención <br>
      <%= f.check_box :conta_multi_unidades %> Contas Multi Unidades

    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <label>Unidad tabla de precio padrão</label>
      <%= f.collection_select :unidade_tabela_preco_id, Unidade.all( :select => ' id, unidade_nome', :order  => '2' ), :id, :unidade_nome,{:prompt => 'Selecione la unidade'} %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <label>Token API</label>
      <%= f.text_field :token_api, class: 'panel-field' %>
    </div>
    <div class="col-md-6">
      <label>Tenit</label>
      <%= f.text_field :nome_api_fiscal, class: 'panel-field' %>
    </div>
  </div>
  <div class="footer-buttons">
      <%= f.submit t('SAVE'), class: "btn btn-green", disable_with: "Aguarde...", "data-plus-as-tab" => "false"%>
      <%= link_to t('BACK'), unidades_path, :class => "btn btn-back" %>
  </div>
<% end %>
</div>
<script>
  $('#unidade_cidade_id').selectize();
  $('#unidade_unidade_tabela_preco_id').selectize();
</script>
