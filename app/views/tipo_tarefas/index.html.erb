<h1 id="header">Tipo Tarefas</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_tipo_tarefa_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="150">Nome</td>
    <td width="100">Icon</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @tipo_tarefas.each do |tipo_tarefa| %>
      <tr class="<%= cycle("cor1", "cor2")%>">
        <td width="150"><%= tipo_tarefa.nome %></td>
        <td width="100"><%=raw tipo_tarefa.icon %></td>
        <td><%= link_to '', edit_tipo_tarefa_path(tipo_tarefa), class: 'icon-pencil' %></td>
        <td><%= link_to '', tipo_tarefa, :confirm => t('CONFIRMATION_MESSAGE'), :method => :delete, class: 'icon-trash' %></td>
      </tr>
    <% end %>
  </table>
</div>


