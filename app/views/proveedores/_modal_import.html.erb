<div class="modal fade" id="modal-importar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header btn-blue">
        <h1 style="font-size: 16px; font-weight: bold;">Importar Planilha</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #fff">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="padding: 5px 15px 15px 15px">
        <%= form_tag imp_proveedores_path, multipart: true, class: 'form-default' do %>
        <div class="row">
          <div class="col-md-12">
            <label>Arquivo</label>
            <%= file_field_tag :file, class: 'btn btn-default import' %>
          </div>
        </div>

          <div class="row">
            <div class="col-md-12 footer-buttons" >
              <%= submit_tag "Grabar", class: 'btn btn-green', disable_with: "Aguarde...", "data-plus-as-tab" => "false" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>

  $('#modal-importar').on('shown.bs.modal', function() {
    $('.pagar-descricao').focus();
  })

</script>

