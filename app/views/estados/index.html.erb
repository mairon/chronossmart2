<h1 id="header"><%= t('STATE') %>s</h1>
<div class="acessos">
  <%= link_to t('NEW'), {:action => 'new'},:class => 'button add' %>    
</div>

<div class="group">
  <table class="head_grid">
    <tr>
      <td width="105" align="center"><%= t('CODE') %></td>
      <td width="200"><%= t('COUNTRY') %></td>
      <td width="200"><%= t('STATE') %>s</td>
      <td width="50"></td>

    </tr>
  </table>

  <div class="rolagem" id="div">
    <table>
      <% @estados.each do |e| %>
        <tr class = "<%= cycle("cor1", "cor2") %>">
          <td width="105" align="center"><%= e.id.to_s.rjust(6,'0') %></td>
          <td width="200"><%= e.paise.nome %></td>
          <td width="200"><%= e.nome %></td>
          <td><%= link_to '', edit_estado_path(e), class: 'icon-pencil' %></td>
          <td><%= link_to '', e, :confirm => t('CONFIRMATION_MESSAGE'), :method => :delete, class: 'icon-trash' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

