<h1 id="header">Depositos</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_deposito_path, :class => 'button add' %>
</div>
<div class="group">
  <table class="head_grid">
    <tr>
      <td width="55"><%= t('CODE') %></td>
      <td width="400">Deposito</td>
      <td width="200"><%= t('UNIT') %></td>
      <td width="55"></td>
    </tr>
  </table>
  <div class="rolagem" dir="div">
    <table>

      <% @depositos.each do |d| %>
        <tr class = "<%= cycle("cor1", "cor2") %>">
          <td width="55"><%= d.id.to_s.rjust(6,'0') %></td>
          <td width="400"><%= d.nome %></td>
          <td width="200"><%= d.unidade.unidade_nome %></td>
          <td><%= link_to '', edit_deposito_path(d), class: 'icon-pencil' %></td>
          <td><%= link_to '', d, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
        </tr>
      <% end %>
    </table>


  </div>
</div>
