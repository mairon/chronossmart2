<h1 id="header">terminal_contas</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_terminal_conta_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Terminal</td>
            <td><%= t('FORM_OF_PAYMENT') %></td>
            <td>Conta</td>
            <td>Moeda</td>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @terminal_contas.each do |terminal_conta| %>
      <tr>
                  <td><%= terminal_conta.terminal_id %></td>
                  <td><%= terminal_conta.forma_pago_id %></td>
                  <td><%= terminal_conta.conta_id %></td>
                  <td><%= terminal_conta.moeda %></td>
                <td><%= link_to 'Editar', edit_terminal_conta_path(terminal_conta) %></td>
        <td><%= link_to t('DELETE'), terminal_conta, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

