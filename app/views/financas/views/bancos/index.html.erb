<h1 id="header">bancos</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_banco_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td><%= t('NAME') %></td>
            <td>Status</td>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @bancos.each do |banco| %>
      <tr>
                  <td><%= banco.nome %></td>
                  <td><%= banco.status %></td>
                <td><%= link_to 'Editar', edit_banco_path(banco) %></td>
        <td><%= link_to t('DELETE'), banco, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

