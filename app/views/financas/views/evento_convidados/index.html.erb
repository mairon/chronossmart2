<h1 id="header">evento_convidados</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_evento_convidado_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Evento</t>
            <td>Nome</t>
            <td>Doc</t>
            <td>Confirmado</t>
            <td>Presente</t>
            <td>Confirmado data</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @evento_convidados.each do |evento_convidado| %>
      <tr>
                  <td><%= evento_convidado.evento_id %></td>
                  <td><%= evento_convidado.nome %></td>
                  <td><%= evento_convidado.doc %></td>
                  <td><%= evento_convidado.confirmado %></td>
                  <td><%= evento_convidado.presente %></td>
                  <td><%= evento_convidado.confirmado_data %></td>
                <td><%= link_to 'Editar', edit_evento_convidado_path(evento_convidado) %></td>
        <td><%= link_to 'Borrar', evento_convidado, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

