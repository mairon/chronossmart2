<h1 id="header">contas_forma_pagos</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_contas_forma_pago_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Conta</t>
            <td>Forma pago</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @contas_forma_pagos.each do |contas_forma_pago| %>
      <tr>
                  <td><%= contas_forma_pago.conta_id %></td>
                  <td><%= contas_forma_pago.forma_pago_id %></td>
                <td><%= link_to 'Editar', edit_contas_forma_pago_path(contas_forma_pago) %></td>
        <td><%= link_to 'Borrar', contas_forma_pago, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

