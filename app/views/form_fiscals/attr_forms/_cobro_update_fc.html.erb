<%= form_tag "/form_fiscals/cobro_update_fc" do %>
	<%= hidden_field_tag :cod_proc, @cobro.id %>
	<%= hidden_field_tag :sigla_proc, 'CB' %>
	<%= hidden_field_tag :data, @cobro.data %>
	<%= hidden_field_tag :status, 1 %>
	<%= hidden_field_tag :tipo, 0 %>
	<%= hidden_field_tag :persona_id, @cobro.persona_id %>
	<%= hidden_field_tag :cota, 1 %>
	<%= hidden_field_tag :tipo_op, 9 %>
	<%= hidden_field_tag :moeda, @cobro.moeda %>
	<div class="row">
		<div class="col-md-4"><%= text_field_tag :ruc, @cobro.persona.ruc, class: 'panel-field' %></div>
		<div class="col-md-8"><%= text_field_tag :persona_nome, @cobro.persona.nome_fatura, class: 'panel-field' %></div>
	</div>

	<div class="row">
		<div class="col-md-5">
			<label>Factura</label>
			<%= select("busca", "doc", FormFiscal.all(:select => 'id,doc,doc_01,doc_02',:conditions => ["tipo_doc = 1 and status = 0 and unidade_id = #{current_unidade.id} "],limit: 60,:order => 'CAST(doc as integer)').collect {|p| [ p.doc_01 << '.' << p.doc_02 << '.' << p.doc, p.id ] },:class => "select", )  %>			
		</div>
		<div class="col-md-4">
			<label>Monto</label>
			<%= text_field_tag :tot_gs, @tot_int_gs.to_i, class: 'panel-field' %>			
		</div>
		<div class="col-md-3" style="margin-top: 25px">
			<%= submit_tag " Grabar ", :disable_with => "Aguarde...", :class => "btn btn-green" %>
		</div>
	</div>
<% end %>
