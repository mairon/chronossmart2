   <h1 id='header'></h1> 
   <div class='group'>
      <h2>
         <%= form_tag resultado_control_obra_relatorios_path, :method => 'get' do%>
            <table>

               <tr>
                  <td align='right'> Fecha : </td>
                  <td>
                     <input name='inicio' id='inicio'  size='10'  onkeyup='Formatadata(this,event)' type='text' />
                     Hasta
                     <input name='final'  id='final'   size='10' onkeyup='Formatadata(this,event)' type='text'/>
                  </td>
               </tr>

               <tr>
                  <td align="right">Cliente :</td>
                  <td>
                     <%=   select("busca", "persona", Persona.all(:select => 'id,nome',:conditions => ["tipo_cliente = 1"],:order => 'nome').collect {|p| [ p.nome, p.id ] }, { :prompt => 'Todos...' },{:class => "selc_medium"})   %>
                  </td>
               </tr>

               <tr>
                  <td align="right">Obra :</td>
                  <td><%=   select("busca", "servico", Servico.all(:select => 'id,nome',:order => 'nome').collect {|p| [ p.nome, p.id ] }, { :prompt => 'Todos...' },{:class => "selc_medium"})   %></td>
              </tr>

              <tr>
                <td align="right">Status :</td>
                <td>
                  <fieldset>
                    <%= radio_button_tag :status, 0,  :Checked => "True"%>Activo
                    <%= radio_button_tag :status, 1  %>Terminado
                    <%= radio_button_tag :status, 2  %>Todos
                  </fieldset>
                </td>
              </tr>

               <tr > 
                  <td></td> 
                  <td>
                     <input  id      = 'button'
                             class   = 'button_info'
                             type    = 'submit'
                             value   = 'Informe'
                             onclick = 'Tipo('0')'/>

                     <input type     = 'submit'
                            id       = 'button'
                            class    = 'button_info'
                            value    = 'Excel'
                            onclick  = 'Tipo('1')'/>
                  </td>
               </tr>

               <input type  = 'hidden'
                      name  = 'tipo'
                      id    = 'tipo'
                      size  = '5'
                      value = '0'/>

            </table>
         <% end %>
      </h2>
   </div>
</body>


