<h1 id="header">Comites</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_comite_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="50" align="center">Código</td>
    <td width="200">Descriptión</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @comites.each do |c| %>
      <tr>
        <td width="50" align="center"><%= c.id.to_s.rjust(6,'0') %></td>
        <td width="200"><%= c.nome %></td>
        <td><%= link_to '', edit_comite_path(c), class: 'icon-pencil' %></td>
        <td><%= link_to '', c, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
      </tr>
    <% end %>
  </table>
</div>
