<div class="modal fade" id="modal-edit-doc" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header btn-primary">
        <h1 style="font-size: 16px; font-weight: bold; padding: 0px !important; color: #fff">Titulo #<span id="data-edit-titulo"></span></h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #fff">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="padding: 5px 20px 20px 20px">
        <%= form_tag edit_doc_clientes_path, :method => "get" do %>
          <div class="row">
            <div class="col-md-12">
              <label>Doc.</label>
                <%= text_field_tag :documento_numero_01, nil, size: 5, class: 'edit_doc_01' %> -
                <%= text_field_tag :documento_numero_02, nil, size: 5, class: 'edit_doc_02' %> -
                <%= text_field_tag :documento_numero, nil, class: 'edit_doc' %>
                <%= hidden_field_tag :titulo, nil, class: 'edit_titulo' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 footer-buttons" >
              <%= submit_tag "Grabar", class: "btn btn-green", disable_with: "Aguarde...", "data-plus-as-tab" => "false" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">

  $('#modal-edit-doc').on('shown.bs.modal', function(event) {
     $("#data-edit-titulo").text($(event.relatedTarget).data('titulo'));
     $(".edit_doc").val($(event.relatedTarget).data('documento-numero'));
     $(".edit_doc_01").val($(event.relatedTarget).data('documento-numero-01'));
     $(".edit_doc_02").val($(event.relatedTarget).data('documento-numero-02'));
     $(".edit_titulo").val($(event.relatedTarget).data('titulo'));

  })


</script>
