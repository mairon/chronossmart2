   <table>
      <% quebra       = "" %>
      <% subdivida    = 0 %>
      <% subcobro     = 0 %>
      <% subsaldo     = 0 %>
      <% totdivida    = 0 %>
      <% totdivida    = 0 %>
      <% subint       = 0 %>
      <% totdividaint = 0 %>
      <% totint       = 0 %>
      <% subdividaint = 0 %>
      <% totcobro     = 0 %>
      <% count        = 0 %>

      <% @clientes.each do |cliente|%>
         <%if quebra != cliente.persona_nome %>

            <%if quebra != "" %>

               <%subsaldo = subdivida.to_f - subcobro.to_f %>
               <tr class="head" height="40" valign="top">
                  <td colspan="3"></td>
                  <td align="right"><%= number_to_currency(subdivida, :format=>' %n ', :separeitor => ',') %></td>
                  <td align="right"><%= number_to_currency(subcobro, :format=>' %n ', :separeitor => ',') %></td>
				  <td>Saldo ==> </td>
                  <td align="right"><%= number_to_currency(subsaldo, :format=>' %n ', :separeitor => ',') %></td>
                  <td align="right"><%= number_to_currency(subint, :format=>' %n ', :separeitor => ',') %></td>
                  <td align="right"><%= number_to_currency(subdividaint, :format=>' %n ', :separeitor => ',') %></td>

               </tr>

               <tr>
                  <td></td>
               </tr>
               
               <% subint       = 0 %>               
               <% subdividaint = 0 %>
               <% subdivida    = 0 %>
               <% subcobro     = 0 %>
               <% subsaldo     = 0 %>

            <%end%>
			
            <td class="head" colspan="12">
            <%= cliente.persona_id %><%=h quebra = cliente.persona_nome %> (<%= cliente.classificacao %>) - Tel.:<%= cliente.telefone %> - Direc.: <%= cliente.direcao %>- Ciudad.: <%= cliente.cidade %> - Obs.:<%= cliente.observacao %>
			</td>

         <% end %>
          <tr>
            <td colspan="2">  </td>
            <td width="50" align="center"><%=h cliente.documento_numero%> </td>
            <td width="70" align="right">   <%=h number_to_currency(cliente.sum_dr, :format=>' %n ', :separeitor => ',' )%> </td>
            <td width="70" align="right">   <%=h number_to_currency(cliente.sum_cr,  :format=>' %n ', :separeitor => ',' )%> </td>
            <td  align="right"></td>
            <td width="70" align="right"></td>
			<% dias = Date.today - cliente.vencimento.to_date if cliente.liquidacao == 0 && dias.to_i >= 0 %>          
            <%  interes = ( ( dias.to_i * 0.17 ) * (cliente.sum_dr.to_f - cliente.sum_cr.to_f ) ) / 100  %>
            <td width="70" align="right"> <%= number_to_currency(interes.to_f, :format=>' %n ', :separeitor => ',' )%> </td>
            <td width="70" align="right">   <%=h number_to_currency(coninteres = ( interes.to_f + (cliente.sum_dr.to_f - cliente.sum_cr.to_f ) ), :format=>' %n ', :separeitor => ',' )%> </td>
            <td width="80" align="center">   <%= dias %> </td>          
            <td width="80" align="center">   <%=h number_to_currency(cliente.vencimento.strftime("%d/%m/%Y"),  :format=>' %n ', :separeitor => ',' )%> </td>

         </tr>
         
         <%  subdivida    += cliente.sum_dd.to_f %>
         <%  subcobro     += cliente.sum_cd.to_f %>
         <%  totdivida    += cliente.sum_dd.to_f %>
         <%  totcobro     += cliente.sum_cd.to_f %>
         <%  subint       += interes.to_f%>
         <%  totint       += interes.to_f%>
         <%  subdividaint += coninteres.to_f %>
         <%  totdividaint += coninteres.to_f %>

         <%  count        += 1 %>

      <% end %>

      <%  subsaldo = subdivida - subcobro%>

      <tr class="head" height="40" valign="top">
         <td colspan="3"></td>
         <td align="right"><%= number_to_currency(subdivida,    :format=>' %n ', :separeitor => ',') %></td>
         <td align="right"><%= number_to_currency(subcobro,     :format=>' %n ', :separeitor => ',') %></td>
		<td>Saldo ==> </td>
         <td align="right"><%= number_to_currency(subsaldo,     :format=>' %n ', :separeitor => ',') %></td>
         <td align="right"><%= number_to_currency(subint, :format=>' %n ', :separeitor => ',') %></td>
         <td align="right"><%= number_to_currency(subdividaint, :format=>' %n ', :separeitor => ',') %></td>
      </tr>
      
      <% subint       = 0 %>
      <% subdividaint = 0 %>
      <% subdivida    = 0 %>
      <% subcobro     = 0 %>
      <% subsaldo     = 0 %>

      <%  totsaldo = totdivida.to_f - totcobro.to_f %>

      <tr class="head"   height="50" valign="top" >
         <td colspan="3"></td>      
         <td  align="right"><%= number_to_currency(totdivida, :format=>' %n ', :separeitor => ',') %></td>
         <td  align="right"><%= number_to_currency(totcobro, :format=>' %n ', :separeitor => ',') %></td>
		<td>Saldo ==> </td>
         <td  align="right"> <%= number_to_currency(totsaldo.to_f + @saldo_anterior.to_f, :format=>' %n ', :separeitor => ',') %></td>
         <td  align="right"><%= number_to_currency(totint, :format=>' %n ', :separeitor => ',') %></td>
         <td  align="right"><%= number_to_currency(totdividaint, :format=>' %n ', :separeitor => ',') %></td>

      </tr>
      
   </table>








