<h1 id="header">Safras</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_safra_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="50">Cod.</td>
    <td width="150">Nome</td>
    <td width="50">Status</td>
    <td width="200">Obs</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @safras.each do |safra| %>
      <tr class = "<%= cycle("cor1", "cor2")%>" >
        <td width="50"><%= safra.id.to_s.rjust(6,'0')%></td>
        <td width="150"><%= safra.nome %></td>
        <td width="150"><%= safra.status %></td>
        <td width="200"><%= safra.obs %></td>
        <td><%= link_to '', edit_safra_path(safra), class: 'icon-pencil' %></td>
        <td><%= link_to '', safra, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
      </tr>
    <% end %>
  </table>
</div>

