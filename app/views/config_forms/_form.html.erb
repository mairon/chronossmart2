              </tr>
           
    </table>
  </div>
  <div class="buttons">
    <%= f.submit :value => t('SAVE'), :class => "button" %>
    <%= link_to t('BACK'), config_forms_path, :class => "button back" %>        
  </div>
</div>
<% end %>
