<style type="text/css">
  
input[type="number"]{
  width: 40px;
}

</style>
<%= form_for(@config_form) do |f| %>
  <% if @config_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@config_form.errors.count, "error") %> prohibited this config_form from being saved:</h2>

      <ul>
      <% @config_form.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<ul class="tabs">
      <li><a href="#tab1"> Config Formulario - [<%= t('EDITION') %>]</a></li>
</ul>

<div class="tab_container">
  <div id="tab1" class="tab_content">
    <table>
      
            <tr>
              <td align="right">Nombre:</td>
              <td colspan="3"><%= f.text_field :nome, size: 53, autofocus: true %></td>
              <td align="right">Unidad:</td>
              <td><%= f.collection_select :unidade_id, Unidade.select('id,unidade_nome').order('2'), :id, :unidade_nome, { prompt: 'Selecione lo unidad' } %></td>
            </tr>
              <tr>              
                <td align="right">Modelo:</td>
                <td><%= f.select :modelo, ([["Matricial", "0"],
                    ["Laser 1 via", "1"],
                    ["Laser 3 via", "2"]]) %></td>
                <td align="right">Modelo <%= t('DATE') %>:</td>
                <td><%= f.select :m_data, ([["dd/mm/YYYY", "0"],
                    ["dd de mm de YYYY", "1"]]) %></td>
                <td align="right">Terminal:</td>
                <td><%= f.collection_select :terminal_id, Terminal.select('id,nome').order('2'), :id, :nome, { prompt: 'Selecione lo terminal' } %></td>
              </tr>

              <tr>
                <td align="right">Espaço01:</td>
                <td><%= f.text_field :space_01, size: 20 %></td>
              </tr>              
              <tr>
                <td align="right">Espaço02:</td>
                <td><%= f.text_field :space_02, size: 20 %></td>
              </tr>              
              <tr>
