<h1 id="header">chaves</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_chafe_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="50">Unidad</td>
    <td width="300">Chave</td>
    <td width="300">Responsable:</td>
  <td>Status</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @chaves.each do |chafe| %>
      <tr class="<%= cycle("cor1", "cor2")%>">
        <td width="50"><%= chafe.unidade_id %></td>
        <td width="300"><%= chafe.nome %></td>
        <td width="300"><%= chafe.persona.nome unless chafe.persona_id.blank? %></td>
        <td><%= chafe.status %></td>
        <td><%= link_to 'Editar', edit_chafe_path(chafe) %></td>
        <td><%= link_to 'Borrar', chafe, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

