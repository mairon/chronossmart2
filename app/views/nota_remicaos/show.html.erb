      </div>
    </div>
  </div>
</div>

  <script>

  function Listado()                //
  {
    window.open('/nota_remicaos/<%= @nota_remicao.id %>/detalhes_produtos_print/', 'Pagina', ' SCROLLBARS=YES, TOP=250, LEFT=500, WIDTH=600, HEIGHT=400');
  }

  function Comprovante()            //
  {
