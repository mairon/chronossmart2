<body onload="ImputFocus('inicio')">
   <h1 align="right" id="header">.</h1>
   <ul class="tabs">
      <li><a href="#tab1">Gerar Sueldos</a></li>
   </ul>

   <div class="tab_container">
      <div id="tab1" class="tab_content">
         <%= form_tag result_gerar_sueldos_sueldos_path, :method => "get" do %>
            <table>

                <tr>
                  <td align="right"> De:</td>
                  <td>
                     <input name="inicio" id="inicio"  size="10" type="text"  onkeyup="Formatadata(this,event)" />
                     Hasta
                     <input name="final"  id="final"   size="10" type="text" onkeyup="Formatadata(this,event)"/>
                  </td>
                </tr>
                <tr>
                  <td align="right">Empleado :</td>
                  <td>
                     <%=   select("busca", "consultor", Persona.all(:select => 'id,nome',:conditions => ["tipo_funcionario = 1"],:order => 'nome').collect {|p| [ p.nome, p.id ] }, { :include_blank => true })   %>
                  </td>
                </tr>

               <tr height="35">
                  <td></td>
                  <td>
                     <input  id      ="button"
                             type    ="submit"
                             class="button_info"
                             value   ="Generar"
                             onclick = "Tipo('0')"/>
                  </td>
               </tr>

            </table>
         <% end %>
   </div>
 </div>

</body>