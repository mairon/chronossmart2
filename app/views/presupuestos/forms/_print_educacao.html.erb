            <table>
                <tr>
                  <td class="head" colspan="2" style="background: #fa4736; color: #fff">Resumen</td>
                </tr>
                <tr>
                  <td class="head">Description</td>
                  <td class="head" align="right">Monto</td>
                </tr>
                <% tot_resumen = 0 %>
