<h1 id="header"><%= t('SEGMENT') %></h1>
<div class="acessos">
  <%= link_to t('NEW'), new_seguimento_path, :class => "button add" %>
</div>
<div class="group">
  <table class="head_grid">
    <tr>
      <td width="110" align="center"><%= t('CODE') %></td>
      <td width="250"><%= t('NAME') %></td>
      <td width="55"></td>
    </tr>
  </table>

  <div class="rolagem" dir="div">
    <table>
      <% @seguimentos.each do |seguimento| %>
          <tr class = "<%= cycle("cor1", "cor2") %>">
          <td width="110" align="center"><%= seguimento.id.to_s.rjust(6,'0') %></td>
          <td width="250"><%= seguimento.nome %></td>
          <td><%= link_to '', edit_seguimento_path(seguimento), class: 'icon-pencil' %></td>
          <td><%= link_to '', seguimento, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
