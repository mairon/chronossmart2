<h1 id="header">unidades_usuarios</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_unidades_usuario_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td><%= t('UNIT') %></td>
            <td>Usuario</td>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @unidades_usuarios.each do |unidades_usuario| %>
      <tr>
                  <td><%= unidades_usuario.unidade_id %></td>
                  <td><%= unidades_usuario.usuario_id %></td>
                <td><%= link_to 'Editar', edit_unidades_usuario_path(unidades_usuario) %></td>
        <td><%= link_to t('DELETE'), unidades_usuario, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

