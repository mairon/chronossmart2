<table class="head_grid">
  <tr>
    <td width="55"><%= t('CODE') %></td>
    <td width="55" align="center"><%= t('DATE') %></td>
    <td width="120">Tipo</td>
    <td width="300">Responsable</td>
    <td width="200">Rodado</td>
    <td width="150">Status</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @entregas.each do |entrega| %>
      <tr class="<%= cycle("cor1", "cor2")%>">
        <td width="55"><%= entrega.id.to_s.rjust(6,'0')%></td>
        <td width="55" align="center"><%= entrega.data.strftime("%d/%m/%y")%></td>
        <td width="120">
        <% if entrega.tipo == 0 %>
          Rodados Proprios
        <% else %>
          Transportadoras  
        <% end %>
        </td>
        <td width="300"><%= entrega.persona_nome %></td>
        <td width="200"><%= entrega.rodado_placa %></td>
        <td width="150">
          <% if entrega.status == 0 %>
            En Curso
          <% else %>
            Finalizado
          <% end %>
        </td>
        <td><%= link_to 'Editar', edit_entrega_path(entrega) %></td>
        <td><%= link_to t('DELETE'), entrega, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
        <td><%= link_to 'Conferir', edit_entrega_path(entrega) %></td>
      </tr>
    <% end %>
  </table>
</div>

