<h1 id="header">Mesas/Tarjetas</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_cartao_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
    <td width="200">Mesas/Trajetas</td>
    <td width="50">Status</td>
    <td width="200">Barra</td>
    <td width="100">Ultima Venta</td>
  </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @cartaos.each do |cartao| %>
      <tr class = "<%= cycle("cor1", "cor2") %>">
        <td width="200"><%= cartao.nome %></td>
        <td width="50"><%= cartao.status %></td>
        <td width="100"><%= cartao.barra %></td>
        <td><%= cartao.venda_id %></td>
        <td><%= link_to 'Editar', edit_cartao_path(cartao) %></td>
        <td><%= link_to 'Borrar', cartao, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

