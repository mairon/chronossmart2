<div class="panel">
  <div class="panel-content">
    <table class="head_grid">
      <tr>
        <td width="150">Pedidos</td>
        <td width="80" align="right">Qtd</td>
      </tr>
    </table>
    <div class="rolagem" dir="div" style="height:80px">
      <table>
        <% @venda.vendas_pedidos.each do |o| %>
          <tr class = "<%= cycle("cor1", "cor2") %>">
            <td width="150"><%= o.presupuesto_id.to_s.rjust(6,'0') %></td>
            <td width="80" align="right"><%= format_int(o.presupuesto.presupuesto_produtos.sum(:quantidade) ) %></td>
            <td><%= link_to '', o, :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
