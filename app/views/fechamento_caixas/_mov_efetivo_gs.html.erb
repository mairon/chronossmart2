<div class="panel">
  <header class="panel-heading">
  	<b>Mov. Efetivo Gs</b>
    <div style="float:right">
    	Saldo Inicial: <b><%= format_int(@fechamento_caixa.abertura_caixa.saldo_gs.to_f) %></b>
    	<% saldo = @fechamento_caixa.abertura_caixa.saldo_gs.to_f %>
    </div>
  </header>

		<table  class="head_grid">
			<tr>
				<td width="300">Concepto</td>
				<td width="200">Registro</td>
				<td width="60" align="right">Entrada</td>
				<td width="60" align="right">Salida</td>
				<td width="60" align="right">Saldo</td>
			</tr>
		</table>
		<div class="rolagem" dir="div" style="height: 260px;">
			<table>
				<% qtd  = 0 %>
				<% desc = 0 %>
				<% tot  = 0 %>
				<% @mov_efetivo_gs.each do |pv| %>
					<tr class = "<%= cycle("cor1", "cor2") %>">
						<td width="300"><small><%= pv.concepto %></small></td>
						<td width="200"><small><%= pv.persona_nome %></small></td>
						<td width="60" align="right"><%= format_int(pv.entrada_guarani) %></td>
						<td width="60" align="right"><%= format_int(pv.saida_guarani) %></td>
						<td width="60" align="right"><%= format_int( saldo  += ( pv.entrada_guarani.to_f - pv.saida_guarani.to_f) ) %></td>
						
					</tr>
				<% end %>
			</table>
		</div>
</div>
