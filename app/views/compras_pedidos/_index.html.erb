<h1 id="header">compras_pedidos</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_compras_pedido_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Pedido <%= t('PURCHASE') %></td>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @compras_pedidos.each do |compras_pedido| %>
      <tr>
                  <td><%= compras_pedido.pedido_compra_id %></td>
                <td><%= link_to 'Editar', edit_compras_pedido_path(compras_pedido) %></td>
        <td><%= link_to t('DELETE'), compras_pedido, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

