	font-size: 12px;
	color: #6d758d;
	text-align: center;
	vertical-align: middle;
}

.tipo-tasks .c-breadcrumb__funnel a{
	color: #6d758d;

}

.c-entity-timeline-form__footer .btn-blue{
	margin: 12px;
}

button {
  background: none;
  border: none;
  outline: none;
}

