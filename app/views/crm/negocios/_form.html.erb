<div class="group">
<%= form_for [:crm, @negocio] do |f| %>
<%= f.hidden_field :status, value: 0 %>
  <div class="row">
    <div class="col-md-12">
      <label>Titulo</label>
      <%= f.text_field :titulo, class: 'panel-field', required: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <label>Contacto</label>
      <%= f.collection_select :persona_id, Persona.where(tipo_cliente: 1), :id, :nome, {:include_blank => true, required: true} %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <label>Usuario</label>

      <% if  @usuario_pipe.permissao.to_i == 0  %>
      <%= f.select(:usuario_id, PipelineUsuario.where(pipeline_id: @pipeline.id).map{|s| [s.usuario.usuario_nome, s.usuario_id]}, {selected: current_unidade.id, required: true}) %>
      <% else %>

      <%= f.select(:usuario_id, PipelineUsuario.where(pipeline_id: @pipeline.id, usuario_id: @usuario_pipe.usuario_id).map{|s| [s.usuario.usuario_nome, s.usuario_id]}, {selected: current_unidade.id, required: true}) %>

      <% end %>

    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <label><%= t('COIN') %></label>
      <%= f.select :moeda, [['Gs.', 1], ['U$', 0], ['R$', 2]], selected: current_unidade.moeda.to_i %>
    </div>


    <div class="col-md-6">
      <label>Expectiva fechamento</label>
      <%= f.text_field :expect_fechamento, value: Time.now.strftime("%d/%m/%Y"), size: 10,  class: "panel-field date", autofocus: true, required: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
        <label>Fase do NÃ©gocio</label>
        <%= f.collection_select :etapa_id, Etapa.where(pipeline_id: @pipeline.id).order(:ordem), :id, :nome, {selected: @pipeline.etapas.order(:ordem).first.id} %>
    </div>
  </div>
  <div class="footer-buttons">
    <%= f.submit t('SAVE'), class: "btn btn-green", disable_with: "Aguarde...", "data-plus-as-tab" => "false"%>
  </div>
<% end %>
</div>

<script>
  $('#negocio_persona_id, #negocio_etapa_id, #negocio_usuario_id').selectize();
</script>