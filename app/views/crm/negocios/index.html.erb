<h1 id="header">negocios</h1>
<div class="acessos">
  <%= link_to 'Nuevo', new_negocio_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td>Titulo</t>
            <td>Persona</t>
            <td>Etapa</t>
            <td>Moeda</t>
            <td>Vendedor</t>
            <td>Expect fechamento</t>
            <td>Status</t>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @negocios.each do |negocio| %>
      <tr>
                  <td><%= negocio.titulo %></td>
                  <td><%= negocio.persona_id %></td>
                  <td><%= negocio.etapa_id %></td>
                  <td><%= negocio.moeda %></td>
                  <td><%= negocio.vendedor_id %></td>
                  <td><%= negocio.expect_fechamento %></td>
                  <td><%= negocio.status %></td>
                <td><%= link_to 'Editar', edit_negocio_path(negocio) %></td>
        <td><%= link_to 'Borrar', negocio, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

