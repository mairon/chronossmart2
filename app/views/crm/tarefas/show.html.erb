<%= form_for(@tarefa) do |f| %>
  <% if @tarefa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tarefa.errors.count, "error") %> prohibited this tarefa from being saved:</h2>

      <ul>
      <% @tarefa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- <ul class="tabs">
      <li><a href="#tab1"> Tarefas - [<%= t('EDITION') %>]</a></li>
</ul> -->

<div class="tab_container">
      <div id="tab1" class="tab_content">
        <table>
          <tr>
            <td width="1000">
              <fieldset>

                <table>
                  <tr>

                      <td colspan="2">
                        <label>Quando:</label>
                        <%= f.datetime_select :quando, :required => true, :disabled => true %>
                      </td>

                  </tr>
                  <tr>
                      <!-- <td>
                        <label>Usuario:</label>
                        <%= f.number_field :usuario_id %>
                      </td> -->

                      <td>
                        <label>Descricion:</label>
                        <%= f.text_area :descricao, :size => "30x15", :required => true, :disabled => true %>
                      </td>
                    </tr>

                    <tr>
                        <td>
                          <label>Completado:</label>
                          <%= f.text_field :updated_at, :value => @tarefa.updated_at.strftime("%d/%m/%Y - %R"), :disabled => true %>
                        </td>
                    </tr>

                    <tr>
                        <td>
                          <%= f.hidden_field :status, :value => false, :disabled => true %>
                        </td>
                    </tr>
                </table>
              </fieldset>
            </td>
          </tr>
        </table>
      </div>

      <div class="buttons">
        <%= link_to t('BACK'), tarefas_path, :class => "btn btn-back" %>
      </div>

    </div>
<% end %>
