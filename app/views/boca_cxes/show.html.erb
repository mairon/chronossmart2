<ul class="tabs">
	<li><a href="#tab1"> Boca Caja Productos - [<%= t('EDITION') %>]</a></li>
</ul>

<div class="group">
	<h2>
		<p>
		  <strong style="margin-left: 10px;">Descripción:</strong>
		  <%= @boca_cx.nome %>
		 </p>
		 &nbsp
		<p hidden="">
