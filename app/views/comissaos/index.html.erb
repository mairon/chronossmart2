<h1 id="header">comissaos</h1>
<div class="acessos">
  <%= link_to t('NEW'), new_comissao_path, :class => "button add" %>
</div>

<table class="head_grid">
  <tr>
            <td><%= t('DATE') %></td>
            <td><%= t('DATE') %> lib</td>
            <td>Vendedor</td>
            <td>Vendedor <%= t('NAME') %></td>
            <td>Persona</td>
            <td>Persona <%= t('NAME') %></td>
            <td>Valor us</td>
            <td>Valor gs</td>
            <td>Valor rs</td>
            <td>Comissao</td>
            <td>Valor comi us</td>
            <td>Valor comi gs</td>
            <td>Valor comi rs</td>
      </tr>
</table>

<div class="rolagem" dir="div">
  <table>
    <% @comissaos.each do |comissao| %>
      <tr>
                  <td><%= comissao.data %></td>
                  <td><%= comissao.data_lib %></td>
                  <td><%= comissao.vendedor_id %></td>
                  <td><%= comissao.vendedor_nome %></td>
                  <td><%= comissao.persona_id %></td>
                  <td><%= comissao.persona_nome %></td>
                  <td><%= comissao.valor_us %></td>
                  <td><%= comissao.valor_gs %></td>
                  <td><%= comissao.valor_rs %></td>
                  <td><%= comissao.comissao %></td>
                  <td><%= comissao.valor_comi_us %></td>
                  <td><%= comissao.valor_comi_gs %></td>
                  <td><%= comissao.valor_comi_rs %></td>
                <td><%= link_to 'Editar', edit_comissao_path(comissao) %></td>
        <td><%= link_to t('DELETE'), comissao, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

