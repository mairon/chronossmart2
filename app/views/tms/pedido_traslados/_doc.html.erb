<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <h1 id="header">
        Docs
        <div class="pull-right">
        </div>
      </h1>

      <div class="panel-body">
        <%= form_for [:tms, PedidoTrasladoDoc.new] do |f| %>
        <%= f.hidden_field :pedido_traslado_id, value:  @pedido_traslado.id %>
        <div class="row">
          <% if @pedido_traslado.tipo == 0 || @pedido_traslado.tipo == 1 %>
            <div class="col-md-5">
              <label>CRT</label>
              <%= f.text_field :crt, class: 'panel-field' %>
            </div>
            <div class="col-md-5">
              <label>MIC</label>
              <%= f.text_field :mic, class: 'panel-field' %>
            </div>
          <% else %>
            <div class="col-md-5">
              <label>CTe</label>
              <%= f.text_field :cte, class: 'panel-field' %>
            </div>
            <div class="col-md-5">
              <label>Manifesto</label>
              <%= f.text_field :manif, class: 'panel-field' %>
            </div>          
          <% end %>
          <div class="col-md-2">
            <label>.</label>
            <%= f.submit 'Add', class: "btn btn-green", disable_with: "Aguarde...", "data-plus-as-tab" => "false"%>
          </div>
        </div>
        <% end %>
      </div>
      <div class="panel-body">
        <table>
          <tr class="head_grid">
            <% if @pedido_traslado.tipo == 0 || @pedido_traslado.tipo == 1 %>
              <td>CRT</td>
              <td>MIC</td>
            <% else %>
              <td>CTe</td>
              <td>Manifesto</td>
            <% end %>
          </tr>
          <% @pedido_traslado.pedido_traslado_docs.each do |pd| %>
          <tr class="list">
            <% if @pedido_traslado.tipo == 0 || @pedido_traslado.tipo == 1 %>
              <td width="200"><%= pd.crt %></td>
              <td width="200"><%= pd.mic %></td>
            <% else %>
              <td width="200"><%= pd.cte %></td>
              <td width="200"><%= pd.manif %></td>
            <% end %>
            <td><%= link_to '', edit_tms_pedido_traslado_doc_path(pd), class: 'icon-pencil' %></td>
            <td><%= link_to '', [:tms, pd], :confirm => 'Estas Seguro?', :method => :delete, class: 'icon-trash' %></td>

          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>