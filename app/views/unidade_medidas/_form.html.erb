<%= form_for(@unidade_medida) do |f| %>
  <% if @unidade_medida.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@unidade_medida.errors.count, "error") %> prohibited this unidade_medida from being saved:</h2>

      <ul>
      <% @unidade_medida.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<ul class="tabs">
      <li><a href="#tab1"> Unidad Medida - [<%= t('EDITION') %>]</a></li>
</ul>

<div class="tab_container">
      <div id="tab1" class="tab_content">
        <table>
          <tr>
            <td width="1000">
              <fieldset>

                <table>
                  <tr>                                      
                    <td align="right">Nombre :</td>                    
                    <td><%= f.text_field :nome, size: 30, maxlength: 100, autofocus: true %></td>
                    <td align="right">Sigla :</td>
                    <td><%= f.text_field :sigla, maxlength: 5 %></td>
                    <td align="right">Unidad :</td>
                    <td><%= f.text_field :unidade, size: 15, :precision => 4, class: 'money_ds', :dir   => "rtl" %></td>
                  </tr>
                </table>
              </fieldset>
            </td>
          </tr>
        </table>
      </div>
      
      <div class="buttons">
        <%= f.submit :value => t('SAVE'), :class => "button" %>
